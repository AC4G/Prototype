<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Metaverse{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('build/assets/style.css') }}">
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% for key, message in app.flashes('success') %}
            {% include 'components/flashMessages/succes.twig' %}
        {% endfor %}
        {% for key, message in app.flashes('error') %}
            {% include 'components/flashMessages/error.twig' %}
        {% endfor %}
            <div class="absolute w-full h-[100vh] left-[0px] top-[0px] right-[0px] bg-black bottom-[0px] opacity-0 z-[-1] transition-all" id="blur"></div>
            {% block body %}
            {% endblock %}
            <script src="{{ asset('js/basic/closeFlashMessage.js') }}"></script>
        {% block scripts %}
        {% endblock %}
    </body>
</html>
