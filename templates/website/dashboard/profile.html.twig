                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </div>
                                <div id="password-loading" class="absolute z-[-1] opacity-0 h-full w-full transition-all">
                                    <div class="lds-dual-ring"></div>
                                </div>
                                <div id="password-allowed" class="absolute z-[-1] h-full w-full transition-all">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" class="fill-green-400" viewBox="0 0 16 16">
                                        <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                    </svg>
                                </div>
                            </div>
                            <input type="hidden" name="form-type" value="password">
                            <div class="relative w-fit mx-auto mt-[20px] h-[70px]">
                                <div id="password-submit" class="w-fit h-fit cursor-not-allowed">
                                    <button id="password-button" type="submit" class="pointer-events-none border-2 border-[#17ddff] text-white h-[30px] w-[200px] rounded bg-[#06b6d4] hover:bg-[#17ddff] transition">Save password</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset('js/responsive/profile.js') }}"></script>
    <script src="{{ asset('js/profile/passwordChange.js') }}"></script>
    <script src="{{ asset('js/profile/mailChange.js') }}"></script>
    <script src="{{ asset('js/profile/nickChange.js') }}"></script>
    <script src="{{ asset('js/profile/imgChange.js') }}"></script>
    <script>
        let privacy = document.getElementById('privacy');
        let form = document.getElementById('form-privacy');

        privacy.addEventListener('click', function handleClick() {
            form.submit();
        });
    </script>
{% endblock %}
