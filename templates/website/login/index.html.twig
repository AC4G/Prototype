{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('home') }}">
        <p><- back to homepage</p>
    </a>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Log In</h1>
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label>Nickname</label>
                        <input type="text" class="form-control" id="username" name="_username" placeholder="Enter your nickname.." value="{{ last_username }}" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Enter your password.." required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn btn-primary submit-button" style="margin-top: 20px; margin-bottom: 20px">Submit</button>
                </form>
                <p>
                    You don't have an account? Go to
                    <a href="{{ path('registration') }}">Registration</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
