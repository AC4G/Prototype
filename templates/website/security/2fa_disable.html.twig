{% extends 'base-without-components.html.twig' %}

{% block body %}
    <div class="twoFa-box">
        <div class="w-fit mx-auto mt-[50px]">
            <p class="text-[22px]">Disable 2-Step Verification</p>
        </div>
        <div class="w-fit h-fit mx-auto mt-[10px]">
            <div class="w-fit h-fit">
                <p class="text-[14px]">Don't have access to authenticator?</p>
            </div>
            <div class="w-fit h-fit mx-auto">
                <p class="text-[14px]">Use the recovery token.</p>
            </div>
        </div>
        <form action="{{ path('two_factor_authentication_disable') }}" method="POST" id="twoFa-disable">
            <div class="w-fit h-fit mx-auto mt-[20px]">
                <input autocomplete="off" class="input" id="code" type="text" name="code" placeholder="Type the verification code..." autofocus/>
                <input type="hidden" name="token" value="{{ csrf_token('disable_2fa') }}">
            </div>
            <div class="w-fit h-fit mx-auto mt-[30px]">
                <p class="text-[14px] text-center w-[240px]">By clicking 'Continue' you will remove your 2-Step Verification</p>
            </div>
            <div class="w-[247.5px] mx-auto h-fit mt-[40px] flex justify-between mb-[50px]">
                <a href="{{ path('settings_profile') }}" class="w-[80px] h-[35px] rounded hover:bg-black transition">
                    <div class="w-full h-full flex items-center justify-center">
                        <p class="text-[16px] w-fit h-fit">Cancel</p>
                    </div>
                </a>
                <div class="w-fit h-fit">
                    <button type="submit" class="submit-button">Continue</button>
                </div>
            </div>
        </form>
    </div>
    <script type="module">
        import FormValidator from "{{ asset('build/js/FormValidator.js') }}";

        const twoFaDisable = new FormValidator('twoFa-disable', { code: 'code' })
    </script>
{% endblock %}