{% extends 'baseDashboard.html.twig' %}

{% block body %}
    <div class="overflow-x-hidden overflow-y-scroll scrollbar-hide w-full h-[100vh]">
        {% include 'website/dashboard/components/navbar.html.twig' %}
        <div class="flex max-w-[1000px] mx-auto h-fit pt-[40px]">
            <div class="relative w-full flex justify-evenly">
                <form action="{{ path('settings_profile') }}" method="post" enctype="multipart/form-data" name="profile-pic-form" class="h-fit">
                    <input type="hidden" name="token" value="{{ csrf_token('picture') }}" />
                    <div class="w-fit">
                        <div class="w-fit h-[30px]">
                            <p class="font-inter text-[14px] select-none">Profile picture</p>
                        </div>
                        <div class="relative w-[124px] h-[124px] rounded-full bg-[#2e4053]">
